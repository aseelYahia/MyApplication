<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WordleActivity"
    android:background="@drawable/pinkish_sky"
    android:orientation="vertical"
>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:alpha="0.7"
        android:background="#DB7093"
        android:fontFamily="@font/georgiaz"
        android:gravity="center"
        android:text="lover aesthetic"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pacifico"
        android:text="Wordle TV"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/hoty_pinky" />

    <LinearLayout
        android:id="@+id/wordle_table"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:alpha="0.7">
        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:background="@drawable/wordle_row">

            <EditText
                android:id="@+id/letter1row1"
                android:layout_width="50dp"
                android:layout_height="65dp"/>
            <EditText
                android:id="@+id/letter2row1"
                android:layout_width="50dp"
                android:layout_height="65dp"/>
            <EditText
                android:id="@+id/letter3row1"
                android:layout_width="50dp"
                android:layout_height="65dp"/>
            <EditText
                android:id="@+id/letter4row1"
                android:layout_width="50dp"
                android:layout_height="65dp"/>
            <EditText
                android:id="@+id/letter5row1"
                android:layout_width="50dp"
                android:layout_height="65dp"/>
            <Button
                android:id="@+id/check_row1"
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableEnd="@drawable/check_icon"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:background="@drawable/wordle_row">

            <EditText
                android:id="@+id/letter1row2"
                android:layout_width="50dp"
                android:layout_height="65dp"/>
            <EditText
                android:id="@+id/letter2row2"
                android:layout_width="50dp"
                android:layout_height="65dp"/>
            <EditText
                android:id="@+id/letter3row2"
                android:layout_width="50dp"
                android:layout_height="65dp"/>
            <EditText
                android:id="@+id/letter4row2"
                android:layout_width="50dp"
                android:layout_height="65dp"/>
            <EditText
                android:id="@+id/letter5row2"
                android:layout_width="50dp"
                android:layout_height="65dp"/>
            <Button
                android:id="@+id/check_row2"
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableEnd="@drawable/check_icon"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:background="@drawable/wordle_row">
            <EditText
                android:id="@+id/letter1row3"
                android:layout_width="50dp"
                android:layout_height="65dp"/>
            <EditText
                android:id="@+id/letter2row3"
                android:layout_width="50dp"
                android:layout_height="65dp"/>
            <EditText
                android:id="@+id/letter3row3"
                android:layout_width="50dp"
                android:layout_height="65dp"/>
            <EditText
                android:id="@+id/letter4row3"
                android:layout_width="50dp"
                android:layout_height="65dp"/>
            <EditText
                android:id="@+id/letter5row3"
                android:layout_width="50dp"
                android:layout_height="65dp"/>
            <Button
                android:id="@+id/check_row3"
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableEnd="@drawable/check_icon"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/row4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:background="@drawable/wordle_row">
            <EditText
                android:id="@+id/letter1row4"
                android:layout_width="50dp"
                android:layout_height="65dp"/>
            <EditText
                android:id="@+id/letter2row4"
                android:layout_width="50dp"
                android:layout_height="65dp"/>
            <EditText
                android:id="@+id/letter3row4"
                android:layout_width="50dp"
                android:layout_height="65dp"/>
            <EditText
                android:id="@+id/letter4row4"
                android:layout_width="50dp"
                android:layout_height="65dp"/>
            <EditText
                android:id="@+id/letter5row4"
                android:layout_width="50dp"
                android:layout_height="65dp"/>
            <Button
                android:id="@+id/check_row4"
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableEnd="@drawable/check_icon"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/row5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:background="@drawable/wordle_row">
            <EditText
                android:id="@+id/letter1row5"
                android:layout_width="50dp"
                android:layout_height="65dp"/>
            <EditText
                android:id="@+id/letter2row5"
                android:layout_width="50dp"
                android:layout_height="65dp"/>
            <EditText
                android:id="@+id/letter3row5"
                android:layout_width="50dp"
                android:layout_height="65dp"/>
            <EditText
                android:id="@+id/letter4row5"
                android:layout_width="50dp"
                android:layout_height="65dp"/>
            <EditText
                android:id="@+id/letter5row5"
                android:layout_width="50dp"
                android:layout_height="65dp"/>
            <Button
                android:id="@+id/check_row5"
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableEnd="@drawable/check_icon"/>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
