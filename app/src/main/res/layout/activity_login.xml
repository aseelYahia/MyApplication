<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal|top"
    android:layout_gravity="center"
    tools:context=".MainActivity"
    android:background="@drawable/nycbackgroundl">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Come back, Be here"
        android:background="@color/my_gray"
        android:textColor="@color/white"
        android:fontFamily="@font/georgiaz"
        android:gravity="center"
        android:alpha="0.7"
        android:textSize="15dp"/>

    <!--<TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/optiengraversoldenglish"
        android:text="Log In "
        android:textColor="@color/white"
        android:textSize="34sp" />-->


    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="280dp"
        android:fontFamily="@font/georgiab"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:text="a@a.com"
        android:background="@color/my_gray"
        android:alpha="0.5"
        android:textColor="@color/white"
        android:textColorHint="@color/niki" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_margin="30dp"
        android:fontFamily="@font/georgiab"
        android:hint="password"
        android:inputType="textPassword"
        android:text="a#A12345678"
        android:background="@color/my_gray"
        android:alpha="0.5"
        android:textColor="@color/white"
        android:textColorHint="@color/niki" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="?android:attr/selectableItemBackground"
        android:fontFamily="@font/optiengraversoldenglish"
        android:text="SignIn"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        />


</LinearLayout>