<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/taylorp"
    android:gravity="center_horizontal|top"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="I remember it all too well"
        android:background="@color/jade"
        android:textColor="@color/my_gray"
        android:fontFamily="@font/georgiaz"
        android:gravity="center"
        android:alpha="0.7"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/optiengraversoldenglish"
        android:text="Our Taylor's Version"
        android:textColor="@color/my_gray"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="?android:attr/selectableItemBackground"
        android:fontFamily="@font/optiengraversoldenglish"
        android:padding="10dp"
        android:text="signin"
        android:textStyle="bold"
        android:textColor="@color/my_gray" />

    <Button
        android:id="@+id/buttonSignUp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="?android:attr/selectableItemBackground"
        android:fontFamily="@font/optiengraversoldenglish"
        android:padding="10dp"
        android:text="SignUp"
        android:textStyle="bold"
        android:textColor="@color/my_gray" />


</LinearLayout>