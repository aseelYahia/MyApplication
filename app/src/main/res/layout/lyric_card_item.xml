<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_card"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="150dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/fearless_redish">
        <TextView
            android:id="@+id/textview_titlelyrics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:text="title"
            android:textColor="@color/fearless_sand"
            android:textStyle="bold"
            android:fontFamily="@font/carla_sans_regular"
            android:textSize="13sp"/>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/guitar_asthetic">
            <TextView
                android:id="@+id/textview_thetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>