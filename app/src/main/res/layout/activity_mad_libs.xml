<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MadLibsActivity"
    android:orientation="vertical"
    android:background="@drawable/hearbeatonthehighline"
    android:gravity="center_horizontal"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Mad Libs (TV)"
            android:textColor="#A13333"
            android:textAlignment="center"
            android:fontFamily="@font/tungsten_bold"
            android:textSize="40sp"
            />

    </LinearLayout>
    <ScrollView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/final_piece_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_margin="20dp"
            android:fontFamily="@font/tungsten_bold"
            android:textColor="@color/white"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/bonus_tv"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/tungsten_bold"
            android:textColor="#A13333"
            android:textSize="35sp"/>
        <EditText
            android:id="@+id/edit1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:backgroundTint="#A13333"
            android:fontFamily="@font/tungsten_bold"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:hint="cutlury"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/edit2"
            android:layout_width="100dp"
            android:textSize="25sp"
            android:layout_height="wrap_content"
